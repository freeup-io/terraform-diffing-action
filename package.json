{
  "name": "terraform-diffing",
  "version": "0.0.0",
  "private": true,
  "description": "Filter paths based on diffing rules",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/freeup-io/terraform-diffing-action.git"
  },
  "keywords": [
    "actions",
    "git"
  ],
  "author": "lostick",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.0",
    "simple-git": "^1.132.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.7.12",
    "@typescript-eslint/parser": "^2.8.0",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^5.16.0",
    "eslint-plugin-github": "^2.0.0",
    "eslint-plugin-jest": "^22.21.0",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.6.4"
  }
}
